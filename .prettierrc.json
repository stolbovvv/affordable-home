{
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "endOfLine": "crlf",
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",

  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 140
      }
    },
    {
      "files": ["*.css", "*.sass", "*.scss", "*.less"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
